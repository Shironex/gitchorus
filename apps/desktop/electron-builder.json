{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.gitchorus.desktop",
  "productName": "GitChorus",
  "directories": {
    "output": "release",
    "buildResources": "resources"
  },
  "files": ["dist/**/*", "package.json", "!**/*.map", "!**/*.d.ts", "!dist/**/*.d.ts"],
  "asarUnpack": ["node_modules/@anthropic-ai/claude-agent-sdk/**/*"],
  "artifactName": "${productName}-${version}-${arch}.${ext}",
  "nodeGypRebuild": false,
  "npmRebuild": false,
  "publish": {
    "provider": "github",
    "owner": "Shironex",
    "repo": "gitchorus"
  },
  "mac": {
    "category": "public.app-category.developer-tools",
    "icon": "resources/icon.png",
    "target": ["dmg", "zip"]
  },
  "win": {
    "icon": "resources/icon.ico",
    "target": ["nsis"]
  },
  "linux": {
    "icon": "resources/icon.png",
    "target": ["AppImage", "deb"],
    "category": "Development",
    "executableName": "gitchorus"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "_comment:electronFuses": "onlyLoadAppFromAsar applies to app code loading only; asarUnpack extracts files to app.asar.unpacked/ on disk for child process spawning (e.g. SDK cli.js, WASM, ripgrep binaries). Both coexist safely â€” Electron loads app code from asar while unpacked files are accessible via filesystem.",
  "electronFuses": {
    "runAsNode": false,
    "enableNodeCliInspectArguments": false,
    "enableNodeOptionsEnvironmentVariable": false,
    "onlyLoadAppFromAsar": true
  }
}
